# =================================================================
# PaiNaiDee Backend Configuration
# =================================================================

# Application Environment
APP_ENV=development
LOG_LEVEL=INFO

# Flask Configuration
SECRET_KEY=a-very-secret-key-change-in-production
FLASK_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://postgres:Got0896177698@localhost:5432/painaidee_db

# Option 2: Individual database components (used if DATABASE_URL not set)
DB_USER=postgres
DB_PASSWORD=Got0896177698
DB_HOST=localhost
DB_PORT=5432
DB_NAME=painaidee_db

# Search Configuration
# JSON string defining weights for search result ranking
SEARCH_RANK_WEIGHTS={"popularity": 0.4, "freshness": 0.3, "similarity": 0.3}

# Maximum radius in kilometers for nearby location searches
MAX_NEARBY_RADIUS_KM=50

# Minimum trigram similarity threshold (0.0-1.0)
TRIGRAM_SIM_THRESHOLD=0.3

# Feature flags for search functionality
FEATURE_AUTOCOMPLETE=true
FEATURE_NEARBY=true

# Optional: Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# Talk/LLM Configuration (Optional)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
TALK_MODEL=gpt-3.5-turbo
TALK_MAX_TOKENS=500
TALK_TEMPERATURE=0.7
TALK_MAX_CONTEXT_LENGTH=10

# JWT Configuration
JWT_SECRET_KEY=super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://painaidee.com,https://frontend-painaidee.web.app
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# External API Configuration
GOOGLE_MAPS_API_KEY=
WEATHER_API_KEY=
