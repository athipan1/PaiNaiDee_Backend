# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/painaidee_db

# Or for development/testing with SQLite
# DATABASE_URL=sqlite:///./painaidee_dev.db

# Authentication
API_KEYS=demo-api-key,test-key-123,painaidee-dev-key
JWT_SECRET_KEY=your-secure-secret-key-here

# Search Configuration  
TRIGRAM_SIM_THRESHOLD=0.35
SEARCH_RANK_WEIGHTS={"w_pop": 0.7, "w_recency": 0.3}
ALPHA_COMMENT=2.0
TAU_MINUTES=4320
MAX_NEARBY_RADIUS_KM=50.0

# Application
DEBUG=true
APP_VERSION=1.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://pai-naidee-ui-spark.vercel.app
